@page "/vehiculos"

<h3>Gestión de Vehículos</h3>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Agregar Vehículo
            </div>
            <div class="card-body">
                <EditForm Model="@nuevoVehiculo" OnValidSubmit="ProcesarFormularioValido">
                    <DataAnnotationsValidator />

                    <div class="form-group mb-2">
                        <label for="marca">Marca:</label>
                        <InputText id="marca" class="form-control" @bind-Value="nuevoVehiculo.Marca" />
                    </div>

                    <div class="form-group mb-2">
                        <label for="modelo">Modelo:</label>
                        <InputText id="modelo" class="form-control" @bind-Value="nuevoVehiculo.Modelo" />
                    </div>

                    <div class="form-group mb-2">
                        <label for="anio">Año:</label>
                        <InputNumber id="anio" class="form-control" @bind-Value="nuevoVehiculo.Anio" />
                    </div>

                    <div class="form-group mb-2">
                        <label for="color">Color:</label>
                        <InputText id="color" class="form-control" @bind-Value="nuevoVehiculo.Color" />
                    </div>

                    <button type="submit" class="btn btn-primary">Agregar</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        @if (listaVehiculos.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Año</th>
                        <th>Color</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehiculo in listaVehiculos)
                    {
                        <tr>
                            <td>@vehiculo.Id</td>
                            <td>@vehiculo.Marca</td>
                            <td>@vehiculo.Modelo</td>
                            <td>@vehiculo.Anio</td>
                            <td>@vehiculo.Color</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => EliminarVehiculo(vehiculo.Id)">
                                    Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                No hay vehículos registrados.
            </div>
        }
    </div>
</div>

@code {
    private VehiculoDto nuevoVehiculo = new VehiculoDto();
    private List<VehiculoDto> listaVehiculos = new List<VehiculoDto>();
    private int siguienteId = 1;

    private void ProcesarFormularioValido()
    {
        nuevoVehiculo.Id = siguienteId++;
        listaVehiculos.Add(nuevoVehiculo);
        nuevoVehiculo = new VehiculoDto();
    }

    private void EliminarVehiculo(int id)
    {
        var vehiculo = listaVehiculos.FirstOrDefault(v => v.Id == id);
        if (vehiculo != null)
        {
            listaVehiculos.Remove(vehiculo);
        }
    }
}